[Unit]
Description=Set %i MAC address from badmac-config
Wants=network-pre.target
Before=network-pre.target
BindsTo=sys-subsystem-net-devices-%i.device
After=sys-subsystem-net-devices-%i.device
After=badmac-config.service

[Service]
Type=oneshot
EnvironmentFile=/run/libreelec/badmac-%i
ExecStart=/usr/sbin/ip link set dev %i down
ExecStart=/usr/sbin/ip link set dev %i address $MAC
ExecStart=/usr/sbin/ip link set dev %i up

[Install]
WantedBy=multi-user.target
